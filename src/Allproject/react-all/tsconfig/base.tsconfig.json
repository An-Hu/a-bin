{
    "compilerOptions": {
        "jsx": "preserve",
        "module": "ESNext",
        "target": "ES2018",
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "declaration": true
    },
    "exclude": [
        "**/__tests__/**"
    ]
}
